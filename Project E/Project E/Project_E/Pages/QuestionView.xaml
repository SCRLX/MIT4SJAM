<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Project_E.Pages.QuestionView">
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="50"></RowDefinition>
      <RowDefinition Height="*"></RowDefinition>
      <RowDefinition Height="50"></RowDefinition>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"></ColumnDefinition>
      <ColumnDefinition Width="*"></ColumnDefinition>
    </Grid.ColumnDefinitions>
    <Label Text="{Binding Question.Inquiry}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Grid.Row="0" Grid.ColumnSpan="2"></Label>
    <ContentView x:Name="EditorView" Grid.Row="1" Grid.ColumnSpan="2"></ContentView>
    <Button HeightRequest="50" WidthRequest="125" HorizontalOptions="Center" VerticalOptions="Start" BackgroundColor="#FF847C" Text="Login" TextColor="White" Grid.Row="2" Grid.Column="0"></Button>
    <Button HeightRequest="50" WidthRequest="125" HorizontalOptions="Center" VerticalOptions="Start" BackgroundColor="#E84A5F" Text="Login" TextColor="White" Grid.Row="2" Grid.Column="1"></Button>
  </Grid>
</ContentPage>